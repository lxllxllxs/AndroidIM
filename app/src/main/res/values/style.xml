<resources>
    <style name="myTheme" parent="Theme.AppCompat.Light.NoActionBar">

    </style>

    <style name="textview">
        <item name="android:gravity">center</item>
        <item name="android:textSize">25px</item>
        <item name="android:singleLine">true</item>
        <item name="android:paddingBottom">15px</item>
        <item name="android:paddingTop">15px</item>
        <item name="android:textColor">#323232</item>
    </style>

    <style name="editText">
        <item name="android:textColor">#323232</item>
        <item name="android:textSize">25px</item>
        <item name="android:singleLine">true</item>
        <item name="android:paddingBottom">15px</item>
        <item name="android:paddingTop">15px</item>
        <item name="android:background">@drawable/bg_whitesolid_6radius_whitestroke</item>
    </style>


    <style name="ImageView">
        <item name="android:background">#00000000</item>
        <item name="android:scaleType">fitCenter</item>
    </style>



    <!-- loganDialog的样式 -->
    <style name="DialogLogin" parent="android:style/Theme.Dialog">
        <item name="android:background">#00000000</item>
        <item name="android:windowBackground">@android:color/transparent</item>
