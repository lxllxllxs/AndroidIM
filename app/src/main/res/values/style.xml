<?xml version="1.0" encoding="UTF-8"?>
<resources>
    <style name="myTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:background">@color/gray</item>
    </style>

    <style name="textview">
        <item name="android:textColor">#323232</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">13sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:paddingBottom">15px</item>
        <item name="android:paddingTop">15px</item>
    </style>

    <style name="editText">
        <item name="android:textColor">#323232</item>
        <item name="android:textSize">15sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:background">@drawable/bg_edit_white_white</item>
    </style>


    <style name="ImageView">
        <item name="android:background">#00000000</item>
        <item name="android:scaleType">fitCenter</item>
    </style>
</resources>