<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="20px"
                android:paddingRight="20px"
                android:layout_marginBottom="30px"
    >
    <com.yiyekeji.ui.view.CircleImageView
        android:layout_alignParentLeft="true"
        android:id="@+id/iv_head_left"
        style="@style/ImageView"
        android:layout_marginRight="20px"
        android:src="@mipmap/ic_head"
        android:layout_width="60px"
        android:layout_height="60px"/>
    <TextView
        android:text="明月出天山，苍茫云海间无边落木萧萧下，茫云海间无边落木萧萧下，苍茫云海间无边落木萧萧下"
        android:layout_marginRight="70dp"
        android:id="@+id/tv_sender_msg"
        android:textColor="@color/white"
        android:textSize="25px"
        android:layout_toRightOf="@+id/iv_head_left"
        android:layout_centerVertical="true"
        android:background="@drawable/bg_receive_transfer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


</RelativeLayout>