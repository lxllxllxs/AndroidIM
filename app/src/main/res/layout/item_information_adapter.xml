<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/rl_container"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="110px">

    <com.yiyekeji.ui.view.CircleImageView
        android:layout_marginLeft="20px"
        android:id="@+id/civ_head"
        android:layout_centerVertical="true"
        android:layout_width="100px"
        android:src="@mipmap/qq"
        android:layout_height="100px"/>

    <LinearLayout
        android:layout_toRightOf="@id/civ_head"
        android:layout_marginLeft="30px"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/tv_userName"
            android:textSize="25px"
            android:text="loasssd"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:id="@+id/tv_chatMessage"
            android:textSize="24px"
            android:text="asdasdqweqws654654973216513as"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <TextView
        android:layout_marginRight="50px"
        android:layout_alignParentRight="true"
        android:id="@+id/tv_date"
        android:text="2016-11-29"
        android:textSize="25px"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="50px"/>
    <com.yiyekeji.ui.view.NumberView
        android:layout_below="@+id/tv_date"
        android:layout_marginRight="50px"
        android:layout_alignParentRight="true"
        android:id="@+id/numberview"
        android:layout_width="35px"
        android:layout_height="35px"/>
</RelativeLayout>